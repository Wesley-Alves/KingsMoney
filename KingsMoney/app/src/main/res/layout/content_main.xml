<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.senaijandira.kingsmoney.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icone_lancamentos"
            android:text="Lançamentos"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="abrirLancamentos" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icone_estatisticas"
            android:text="Estatísticas"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="abrirEstatisticas" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icone_categoria"
            android:text="Categorias"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="abrirCategorias" />
    </LinearLayout>
</LinearLayout>